<li id="micropost-<%= micropost.id %>">
  #ユーザーイメージを表示
  <span class="user"><%= link_to micropost.user.user_name, micropost.user%></span>
  <div class="eachpostbox">
    <span class="post">
      <p><%= image_tag micropost.picture.url if micropost.picture? %></p>
      <p><%= micropost.content %></p>
    </span>
    <span class="timestamp">
      <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </div>
</li>