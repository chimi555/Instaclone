<% unless current_page?(root_path)%>
  <li id="micropost-<%= micropost.id %>" class= "col-md-4 col-sm-6 col-xs-12">
    <div class="eachpostbox">
      <div class="eachpost-user">
      #ユーザーイメージを表示
        <span class="user"><%= link_to micropost.user.user_name, micropost.user %></span>
      </div>
      <div class="post">
        <%= link_to image_tag("#{micropost.picture.url}"), micropost, remote: true, class: "img-responsive"  %>
      </div>
      <span class="eachpost-content">
        <%= render "likes/like_form", micropost: micropost %>
        <div id="liked_count">
          <%= micropost.likes.count %>
        </div>
        <%= time_ago_in_words(micropost.created_at) %> ago.
        <%= link_to "delete", micropost, method: :delete, data: { confirm: "Are you sure?" }%>
      </span>
    </div>
  </li>
<% else %>
  <li id="micropost-<%= micropost.id %>" class= "col-md-12">
    <div class="eachpostbox">
      <div class="eachpost-user">
      #ユーザーイメージを表示
        <span class="user"><%= link_to micropost.user.user_name, micropost.user %></span>
      </div>
      <div class="post">
        <%= link_to image_tag("#{micropost.picture.url}"), micropost, remote: true, class: "img-responsive"  %>
        <p><%= micropost.content %></p>
      </div>
      <span class="eachpost-content">
        <%= render "likes/like_form", micropost: micropost %>
        <div id="liked_count">
          <%= micropost.likes.count %>
        </div>
        <%= time_ago_in_words(micropost.created_at) %> ago.
        <%= link_to "delete", micropost, method: :delete, data: { confirm: "Are you sure?" }%>
      </span>
    </div>
  </li>
<% end %>