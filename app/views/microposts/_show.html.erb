<div class="modal-dialog">
  <div class="modal-content row">
    <div class="col-md-6">
      <div><%= image_tag("#{@micropost.picture.url}") %></div>
    </div>
    <div class="col-md-6">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <div class="eachpost-user">
          #ユーザーイメージを表示
          <span class="user"><%= link_to @micropost.user.user_name, @micropost.user%></span>
        </div>
      </div>
      <div class = 'modal-body'>
        <span class="eachpost-content">
          <%= render "likes/like_form", micropost: @micropost %>
          <div id="liked_count">
            <%= @micropost.likes.count %>
          </div>
          <%= time_ago_in_words(@micropost.created_at) %> ago.
          <%= link_to "delete", @micropost, method: :delete, data: { confirm: "Are you sure?" }%>
        </span>
        <div>
          <div id="comments-area">
            <%= render "comments/comment_index", comments: @comments %>
          </div>
          <%= render "comments/comment_form", micropost: @micropost, comment: @comment%>
        </div>
      </div>
    </div>
  </div>
</div>