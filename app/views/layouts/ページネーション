ページネーション

gem 'will_paginate',           '3.1.6'
gem 'bootstrap-will_paginate', '1.0.0'

$ bundle install

<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>

def index
  @users = User.paginate(page: params[:page])
end
