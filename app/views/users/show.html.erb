<%= provide(:title, @user.user_name)%>
<div class="usershow_info row">
  <div class="usershow_info-img col-md-4 ">
    <%= image_tag @user.image.thumb.to_s, class: "img-responsive" %>
  </div>
  <div class="col-md-8">
    <div class="user_info-namebox row">
      <span>
        <div class="user-name">
          <%= @user.user_name %>
        </div>
        <div class="user-username">
          <%= @user.name %>
        </div>
      </span>
      <span>
        <%if current_user?(@user)%>
          <%= link_to "プロフィール編集",  edit_user_registration_path, class: "btn" %>
        <% else %>
          <%= render 'follow_form'%>
        <% end %>
      </span>
    </div>
    <div class="countbox row">
      <%= render 'shared/stats'%>
    </div>
    <div class="user-datails row">
      <p><%= @user.url %></p>
      <p><%= @user.profile %></p>
    </div>
  </div>
</div>
<div class="microposts_box">
  <% if @user.microposts.any? %>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>
<div class="modal fade" id="micropost-modal" tabindex="-1" role="dialog" aria-hidden="true"></div>

