<% provide(:title, @title)%>
<div class="row">
  <div class="col-md-4 col-sm-12">
    <%= render 'shared/user_info'%>
  </div>
  <div class = "col-md-8 col-sm-12">
    <h1><%= @title %></h1>
    <% if @users.any? %>
      <div class="users_box row">
        <ul class="users_follow">
          <%= render @users%>
        </ul>
        <%= will_paginate %>
      </div>
    <% else %>
      ユーザーはいません
    <% end %>
  </div>
</div>