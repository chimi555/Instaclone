<%= provide(:title, "Sign in")%>
<div class="whitebox registration-area">
  <h2 class="registration-tit text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">

      <%= f.label :login, 'メールアドレスまたはユーザーネーム' %><br />
      <%= f.text_field :login,  autofocus: true, autocomplete: "login", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn text-center" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
