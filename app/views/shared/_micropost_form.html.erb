<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="picture">
    <%= f.file_field :picture %>
  </span>
  <div class="field">
    <%= f.text_area :content, placeholder: "写真についてコメントする" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
